        }
        .display {
            width: 220px;
            height: 40px;
            text-align: right;
            font-size: 24px;
            margin-bottom: 20px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }
        .button {
            width: 50px;
            height: 50px;
            font-size: 18px;
            border: none;
            background-color: green;
